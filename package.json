{
  "name": "fullstack-monorepo-demo",
  "version": "1.0.0",
  "description": "Full-stack monorepo with NestJS backend, Vue frontend, and shared types",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm build:shared && pnpm build:server && pnpm build:web",
    "build:server": "pnpm --filter @fullstack-monorepo-demo/server build",
    "build:web": "pnpm --filter @fullstack-monorepo-demo/web build",
    "build:shared": "pnpm --filter @fullstack-monorepo-demo/shared build",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean",
    "db:generate": "pnpm --filter @fullstack-monorepo-demo/server db:generate",
    "db:migrate": "pnpm --filter @fullstack-monorepo-demo/server db:migrate",
    "db:studio": "pnpm --filter @fullstack-monorepo-demo/server db:studio"
  },
  "keywords": ["monorepo", "nestjs", "vue", "prisma", "typescript"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "typescript": "^5.1.3"
  }
}
